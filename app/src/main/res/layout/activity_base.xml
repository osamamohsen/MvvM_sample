<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.activities.BaseActivity">

    <data>
        <variable
            name="baseViewModel"
            type="com.app.mvvmsample.base.ParentViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/ll_base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_base_action_bar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:orientation="vertical">


        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_home_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_base_action_bar_container" />


    </LinearLayout>
</layout>